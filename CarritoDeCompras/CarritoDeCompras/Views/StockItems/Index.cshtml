@model IEnumerable<CarritoDeCompras.Models.StockItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock items</h1>

<p>
    <a class="btn btn-outline-light btn-success" asp-action="Create">Crear nuevo</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sucursal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sucursal.Nombre)
            </td>
            <td>
                <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-outline-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>         
                </td>
        </tr>
}
    </tbody>
</table>
