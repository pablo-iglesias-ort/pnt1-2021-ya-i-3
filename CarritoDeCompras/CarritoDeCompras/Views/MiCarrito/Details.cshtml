@model CarritoDeCompras.Models.Carrito 


@{
    ViewData["Title"] = "Details";
}

<h1><img src=https://us.123rf.com/450wm/vectomart/vectomart1301/vectomart130100121/17694889-ilustraci%C3%B3n-del-carro-lleno-de-bolsa-de-la-compra-y-caja-de-regalo-con-la-cinta-en-venta.jpg?ver=6 width="200" height="200" alt="Computer Hope" /> MI CARRITO</h1>

<div>
    
    <hr />
    <dl class="row">
        @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.Role) == "Empleado")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activo)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Subtotal)
        </dd>
    </dl>
</div>

<div>
    @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.Role) == "Empleado")
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    }

    <a asp-controller="Productos" asp-action="ListaProductos">Volver al catalogo</a>
    <div>
        <form asp-action="VaciarCarrito">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="VACIAR EL CARRITO" class="btn-outline-danger" />
        </form>
    </div>
    <div>
        <form asp-controller="Compras" asp-action="Index">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="VER COMPRAS" class="btn-outline-warning" />
        </form>
    </div>
    <div>
        <form name="comprar" asp-controller="Compras" asp-action="Comprar">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" style="width:100px; height:80px" onclick="pregunta()" value="COMPRAR" class="btn-outline-success" />
        </form>
    </div>
</div>

<script>
function pregunta(){
    if (confirm('¿ESTA SEGURO QUE DESEA REALIZAR LA COMPRA?')) {
        document.comprar.submit()
    } else {
        close()
    }
}
</script>