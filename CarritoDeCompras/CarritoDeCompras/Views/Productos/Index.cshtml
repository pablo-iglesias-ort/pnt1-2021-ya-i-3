@model IEnumerable<CarritoDeCompras.Models.Producto>

@{
    ViewData["Title"] = "Administrar Productos";
}

<h1>Productos</h1>

<p>
    <a class="btn btn-outline-light btn-success" asp-action="Create">Crear nuevo</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVigente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVigente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                <a class="btn btn-outline-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                    Editar
                </a>
                <a class="btn btn-outline-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">
                    Detalles
                </a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                    Eliminar
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
